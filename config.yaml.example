gemini_api_key: "YOUR_GEMINI_API_KEY_HERE"
caption_model: gemini-2.5-flash-lite
embedding_model: text-embedding-004

data:
  images_dir: data/input/baseline
  misclassified_dir: data/input/misclassified
  outputs_dir: data/outputs

processing:
  image_max_size: 768
  batch_size_captions: 8
  batch_size_embeddings: 64
  per_request_sleep_seconds: 0.0
  max_retries: 3
  retry_backoff_seconds: 2.0

clustering:
  mode: auto   # auto|hdbscan|kmeans
  kmeans_k: auto
  min_cluster_size: 15
  min_samples: auto

tfidf:
  max_features: 3000
  n_top_keywords: 10

report:
  thumbnail_size: 256
  examples_per_cluster: 12
